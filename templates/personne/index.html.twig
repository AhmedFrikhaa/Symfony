{% extends 'template.html.twig' %}

{% block title %}Liste des Personnes {% endblock %}

{% block body %}
<div class="row">
    {% for personne in personnes %}
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{ personne.name }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{ personne.firstname }}</h6>
            <p class="card-text">Age:{{ personne.age }}</p>
            <a href=" {{path('personne.detail',{id : personne.id}) }}" class="card-link">Detail </a>
            <a href=" {{path('personne.delete',{id : personne.id}) }}" class="card-link">Delete </a>
            <a href=" {{path('personne.edit',{id : personne.id}) }}" class="card-link">Update </a>


        </div>
    </div>
    {% endfor %}
    {% if isPaginated is defined and isPaginated %}
            <div class="row mt-4">
            <nav aria-label="...">
                    <ul class="pagination">
                        {% if (page!=1) %}
                        <li class="page-item ">
                            <a class="page-link" href="{{ path('personne.alls',{page:page-1 , nbr:nbr}) }}">Previous</a>
                        </li>
                        {% endif %}

                        {% for i in range(1,nbrPages) %}
                            <li class="page-item"><a class="page-link" href="{{ path('personne.alls',{page:i , nbr:nbr}) }}">{{ i }}</a></li>
                        {% endfor %}
                        {% if (page!= nbrPages) %}
                            <a class="page-link" href="{{ path('personne.alls',{page:page+1 , nbr:nbr}) }}">Next</a>
                        </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>

        {% endif %}

</div>
{% endblock %}
